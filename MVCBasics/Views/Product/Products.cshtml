@model List<InventoryDomain.Models.ListableProduct>

@{
    ViewBag.Title = "Products";
    ViewBag.Active = "Product";
}

<h2>@ViewBag.Title</h2>

<table id="productsTable" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>
                Product Code
            </th>
            <th>
                Price
            </th>
            <th>
                In Stock
            </th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @product.Sku
                </td>
                <td>
                    @product.Price
                </td>
                <td>
                    <input type="checkbox"  checked="@product.HasStock" />
                </td>
            </tr>
        }
    </tbody>
</table>

<ul>
    <li>
        @Html.ActionLink("Product Detail", "Index", "ProductDetail");
    </li>
</ul>
